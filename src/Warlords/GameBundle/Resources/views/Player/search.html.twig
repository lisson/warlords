

{% block body %}
	{% if app.user.username is defined %}
		<div class="header">
			<div class="atk-title"><h1>Player Info</h1></div>
		</div>
		<div id="atk-dialog">

			<div class="rival-info">
				<header>
			    		<p>Player: {{ player.user.username }}</p>
				</header>
				<ul id="info">
					<li>Level: {{ player.level }}</li>
					<li>Fame: {{ player.Fame }}</li>
					<li>Gold: {{ player.gold}}</li>

				</ul>

	
			</div>
	    		
	    	</div>
	    	<div class="search-result">
	    		<div><button type="button"  onclick="window.location='{{ path('WarlordsGameBundle_player_add_ally', {'target_id' : player.user.id }) }}';" value="Redirect">Add Ally</button></div>
	    		<div><button type="button"  onclick="window.location='{{ path('WarlordsGameBundle_player_attack', {'target_id' : player.user.id }) }}';" value="Redirect">Attack</button></div>
			
		</div>
		
	{% else %}
		<div><p>Please login to access this page</p></div>
	{% endif %}
{% endblock %}

{% block javascripts %}
	<script type="text/javascript"> 
	

	$("button").hover(

                function(){$(this).stop(true).animate({
                    backgroundColor: "#ff760f",
  
                }, 'linear' );},

                function(){$(this).stop(true).animate({
                    backgroundColor: "#1f1b18",

                }, 'linear' );}
        );

	$("input[type='submit']").hover(

                function(){$(this).stop(true).animate({
                    backgroundColor: "#ff760f",
  
                }, 'linear' );},

                function(){$(this).stop(true).animate({
                    backgroundColor: "#1f1b18",

                }, 'linear' );}
        );
	</script>  
{% endblock %}




