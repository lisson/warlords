

{% block body %}
	{% if app.user.username is defined %}
		<div class="header">
			<div class="atk-title"><h1>Player Info</h1></div>
		</div>
		<div id="atk-dialog">
	    	        <div class="userinfo">
				<header>
			    		<p>You: {{ app.user.username }}</p>
				</header>
				<ul id="info">
					<li>Level: {{ app.user.stats.level }}</li>
					<li>Fame: {{ app.user.stats.fame }}</li>
					<li>Gold: {{ app.user.stats.gold}}</li>

				</ul>

			</div>
			<div id="vs"><p>VS</p></div>
			<div class="rivalinfo">
				<header>
			    		<p>Player: {{ player.user.username }}</p>
				</header>
				<ul id="info">
					<li>Level: {{ player.level }}</li>
					<li>Fame: {{ player.Fame }}</li>
					<li>Gold: {{ player.gold}}</li>

				</ul>

	
			</div>
	    		
	    	</div>
	    	<div class="content">
	    	<button type="button"  onclick="window.open('{{ path('WarlordsGameBundle_player_add_ally', {'target_id' : player.user.id }) }}')">Add Friend</button>
			<form action="{{ path('WarlordsGameBundle_player_attack', {'target_id' : player.user.id }) }}" method="post" {{ form_enctype(form) }} class="player">
	    			{{ form_widget(form) }}
	    			{{ form_rest(form) }}
	    			<p><input type="submit" value="Attack"></p>
	   		</form>

		</div>
	{% else %}
		<div><p>Please login to access this page</p></div>
	{% endif %}
{% endblock %}





