{% extends 'WarlordsGameBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/profile.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="mainitem">
        <div class="header">
			<div class="title"><h1>Battle Summary</h1></div>
		</div>
        <div class="content">
            {% if error is defined %}
                <div class="loginerror">{{ error }}</div>
            {% endif %}
            
            {% if info is defined %}
                <div class="information">
                <h2>{{ info }}</h2>
                <p>You have gained:<br />
                
                {% if gold is not empty %}
                {{ gold }} gold<br />
                {% endif %}
                
                {% if calvary is not empty %}
                {{ land }} land<br />
                {% endif %}
                
                You have lost:<br />

                {% if soldiers is not empty %}
                {{ soldiers }} Soldiers  <br />
                {% endif %}
                
                {% if calvary is not empty %}
                {{ knights }} Knights  <br />
                {% endif %}
                
                {% if calvary is not empty %}
                {{ calvary }} Calvary  <br />
                {% endif %}
            	</p>
                
                </div>
            {% endif %}
            <p>
            <a href="{{ path('WarlordsGameBundle_profile') }}">Return to profile</a><br/>
            <a href="{{ path('WarlordsGameBundle_attack', {'target_id': target_id }) }}">Attack again</a>
            </p>
        </div>
		<div class="footer"></div>
	</div>
{% endblock %}

