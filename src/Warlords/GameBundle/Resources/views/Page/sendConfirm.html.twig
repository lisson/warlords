{% extends 'WarlordsGameBundle::layout.html.twig' %}


{% block body %}
    <div class="mainitem">
        <div class="header">
			<div class="title"><h1>Send Soldiers</h1></div>
		</div>
        <div class="content">
		{% if errors %}
		        <ul class="errormsg">
		        {% for error in errors %}
		            <li>{{ error }} </li>
		        {% endfor %}
			</ul>
		{% else %}
			{% if soldiers or knights or calvary %}
				<div class="information">
				<h2>Success!</h2>
				<p>You have sent:<br />

				{% if soldiers %}
					{{ soldiers }} Soldiers  <br />
				{% endif %}

				{% if calvary %}
			       		{{ knights }} Knights  <br />
				{% endif %}

				{% if calvary %}
					{{ calvary }} Calvary  <br />
				{% endif %}
				.<br />
			{% endif %}
			</div>
            {% endif %}
            <p><a href="{{ path('WarlordsGameBundle_profile') }}">Return to profile</a></p>
        </div>
		<div class="footer"></div>
	</div>
{% endblock %}

